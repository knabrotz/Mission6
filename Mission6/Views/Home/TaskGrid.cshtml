@{
    ViewData["Title"] = "Quadrants";
}

@model List<TaskModel>

<div class="containter">
    <div class="row">

        <div class="col">
            <h3>Urgent, Important</h3>
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Due</th>
                        <th>Category</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var x in Model)
                    {
                        if (@x.Completed == false)
                        {
                            if (@x.Quadrant == 1)
                            {
                                <tr>
                                    <td>@x.Task</td>
                                    <td>@x.Date</td>
                                    <td>@x.Category.CategoryName</td>
                                    <td><a asp-controller="Home" asp-action="Edit" asp-route-taskid="@x.TaskId">Edit</a></td>
                                    <td><a asp-controller="Home" asp-action="Delete" asp-route-taskid="@x.TaskId">Delete</a></td>
                                </tr>
                            }
                        }
                    }
                </tbody>
